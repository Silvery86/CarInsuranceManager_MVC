@model List<Vehicle>
<!-- Hero Image Starts here -->
<div class="hero-image-small hero-small-car">
    <div class="container">
        <div class="hero-text-inner">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 m-auto text-center">
                    <h3><span class="sub-heading-1"></span>Vehicle List</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<!-- Hero Image Ends here -->
<!--  BEGIN CONTENT AREA  -->
<div id="content" class="main-content">
    <div class="layout-px-spacing">

<style>
            #zero-config_filter svg {
                display: none;
            }
</style>       
<div class="row layout-top-spacing">
    <div class="col-xl-12 col-lg-12 col-sm-12  layout-spacing">
        <div class="widget-content widget-content-area br-8">
                    <div class="col-12">
                        <div class="row mt-3 mb-3">
                            <div class="col-6">
                                <a class="btn btn-primary" asp-controller="Vehicle" asp-action="Create">
                                    <i class="bi bi-plus-circle"></i> Add New Vehicle
                                </a>
                            </div>
                           
                        </div>
                    </div>
                    <div class="col-12">
                        <div id="zero-config_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                        </div>
                
                    <table id="zero-config" class="table table-striped dt-table-hover dataTable" style="width: 100%;" role="grid" aria-describedby="zero-config_info">
                        <thead>
                            <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Asign User</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Vehicle Name</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Owner Name</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Model</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Version</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending">Vehicle Value</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Insurance Rate</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Body Number</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Engine Number</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Number</th>
                                <th class="sorting_asc" tabindex="0" aria-controls="zero-config" rowspan="1" colspan="1" aria-sort="ascending" aria-label="Name: activate to sort column descending" >Options</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var vehicle in Model)
                            {
                        <tr>
                                            <td>
                                                @vehicle.UserName
                                            </td>
                    <td>
                        @vehicle.Name
                    </td>
                    <td>
                        @vehicle.OwnerName
                    </td>
                    <td>
                        @vehicle.Model
                    </td>
                    <td>
                        @vehicle.Version
                    </td>
                    <td>
                        @(decimal.Round(vehicle.VehicleValue / 1000, 3).ToString("N3") + " $")
                    </td>
                    <td>
                        @((vehicle.Rate.ToString()) + "%")
                    </td>
                    <td>
                        @vehicle.BodyNumber
                    </td>
                    <td>
                        @vehicle.EngineNumber
                    </td>
                    <td>
                        @vehicle.Number
                    </td>
              
                <td class="text-center">
                    <div class="action-btns">
                       
                        <a asp-controller="Vehicle" asp-action="Edit" asp-route-id="@vehicle.Id" class="action-btn btn-edit bs-tooltip me-2" data-toggle="tooltip" data-placement="top" title="Edit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-edit-2"><path d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z"></path></svg>
                        </a>
                        <a asp-controller="Vehicle" asp-action="Delete" asp-route-id="@vehicle.Id" class="action-btn btn-delete bs-tooltip" data-toggle="tooltip" data-placement="top" title="Delete">
                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-trash-2"><polyline points="3 6 5 6 21 6"></polyline><path d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2"></path><line x1="10" y1="11" x2="10" y2="17"></line><line x1="14" y1="11" x2="14" y2="17"></line></svg>
                        </a>
                    </div>
                </td>
            </tr>

           
            }
                            
                        </tbody>
                        
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>
    </div>



<!--  END CONTENT AREA  -->
@section Scripts {
    @{
        <partial name="_TableScript" />
        
    }
}

