@model Vehicle;

<!-- Hero Image Starts here -->
<div class="hero-image-small hero-small-car">
    <div class="container">
        <div class="hero-text-inner">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 m-auto text-center">
                    <h3><span class="sub-heading-1"></span>Delete  Vehicle</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<hr />
<!-- Hero Image Ends here -->
<div class="container">

    <form method="post">
        <input asp-for="Id" hidden />
        <div class="border p-3 mt-4 row justify-content-evenly">
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" disabled class="form-control" />
          
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="OwnerName" class="p-0"></label>
                <input asp-for="OwnerName" disabled class="form-control" />
        
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="Model" class="p-0"></label>
                <input asp-for="Model" disabled class="form-control" />
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="Version" class="p-0"></label>
                <input asp-for="Version" disabled class="form-control" />
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="VehicleValue" class="p-0"></label>
                <input asp-for="VehicleValue" disabled class="form-control" />
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="Rate" class="p-0"></label>
                <input asp-for="Rate" disabled class="form-control" />
             
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="BodyNumber" class="p-0"></label>
                <input asp-for="BodyNumber" disabled class="form-control" />
             
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="EngineNumber" class="p-0"></label>
                <input asp-for="EngineNumber" disabled class="form-control" />
           
            </div>
            <div class="mb-3 row pd-1 col-6">
                <label asp-for="Number" class="p-0"></label>
                <input asp-for="Number" disabled class="form-control" />
        
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-danger form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Vehicle" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List <i class="bi bi-backspace"></i>
                    </a>
                </div>
            </div>
        </div>
    </form>

</div>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}


