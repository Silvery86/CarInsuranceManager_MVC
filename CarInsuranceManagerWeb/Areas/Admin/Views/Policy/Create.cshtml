@model Policy;

<!-- Hero Image Starts here -->
<div class="hero-image-small hero-small-car">
    <div class="container">
        <div class="hero-text-inner">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12 m-auto text-center">
                    <h3><span class="sub-heading-1"></span>Add New Policy</h3>
                </div>
            </div>
        </div>
    </div>
</div>
<hr/>
<!-- Hero Image Ends here -->
<div class="container">

    <form method="post">
        <div class="border p-3 mt-4">
            <div class="mb-3 row pd-1">
                <label asp-for="Name" class="p-0"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="mb-3 row pd-1">
                <label asp-for="Warranty" class="p-0"></label>
                <textarea asp-for="Warranty" class="form-control"></textarea>
                <span asp-validation-for="Warranty" class="text-danger"></span>
            </div>           
            <div class="mb-3 row pd-1">
                <label asp-for="BaseCost" class="p-0"></label>
                <input asp-for="BaseCost" class="form-control" />
                <span asp-validation-for="BaseCost" class="text-danger"></span>
            </div>           
            <div class="mb-3 row pd-1">
                <label asp-for="AnnualCost" class="p-0"></label>
                <input asp-for="AnnualCost" class="form-control" />
                <span asp-validation-for="AnnualCost" class="text-danger"></span>
            </div>
            <div class="mb-3 row pd-1">
                <label asp-for="Description" class="p-0"></label>
                <textarea asp-for="Description" class="form-control" ></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>         
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Add</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Policy" asp-action="Index" class="btn btn-secondary border form-control">
                        Back to List <i class="bi bi-backspace"></i>
                    </a>
                </div>
            </div>
        </div>
    </form>

</div>

@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial" />
    }
}