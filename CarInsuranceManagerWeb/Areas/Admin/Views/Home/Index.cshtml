<script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
<script>
    // Define a function to pad single-digit numbers with leading zeros
    function pad(num) {
        return num < 10 ? '0' + num : num;
    }

    var obj = @Html.Raw(Json.Serialize(Model));
    
    // Create an array of month/year strings from January 2024 to December 2024
    var categories = [];
    var revenueData = [];
    var expenseData = [];
    
    for (var month = 1; month <= 12; month++) {
        var monthStr = pad(month);
        var yearStr = '2024';
        var monthYear = monthStr + '/' + yearStr;
        categories.push(monthYear);

        // Initialize revenue and expense to 0 for the current month
        var revenue = 0;
        var expense = 0;
       

        if (obj['revenueReport'][0]['year'] == yearStr) {
            
            if (obj['revenueReport'][0]['month'] == monthStr) {
                
                revenue = obj['revenueReport'][0]['totalAmount'];
                
            }
        }

        if (obj['expenseReport'][0]['year'] == yearStr) {

            if (obj['expenseReport'][0]['month'] == monthStr) {

                expense = obj['expenseReport'][0]['totalAmount'];
                
            }
        }

        // Push the revenue and expense data for the current month to the respective arrays
        revenueData.push(revenue);
        expenseData.push(expense);
    }

    // Construct the series array with revenue and expense data
    var series = [
        {
            name: 'Revenue',
            data: revenueData
        },
        {
            name: 'Expense',
            data: expenseData
        }
    ];

    var sCol = {
        chart: {
            height: 350,
            type: 'bar',
            toolbar: {
                show: false,
            }
        },
        plotOptions: {
            bar: {
                horizontal: false,
                columnWidth: '55%',
                endingShape: 'rounded'
            },
        },
        dataLabels: {
            enabled: false
        },
        stroke: {
            show: true,
            width: 2,
            colors: ['transparent']
        },
        series: series,
        xaxis: {
            categories: categories,
        },
        yaxis: {
            title: {
                text: '$'
            }
        },
        fill: {
            opacity: 1
        },
        tooltip: {
            y: {
                formatter: function (val) {
                    return "$ " + val 
                }
            }
        }
    };

    var chart = new ApexCharts(document.querySelector("#revenue-monthly-col"), sCol);
    chart.render();
</script>



